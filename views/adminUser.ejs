<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DigiStall Admin - Manage Users</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .sidebar {
            min-height: 100vh;
            background-color: #343a40;
        }
        .sidebar .nav-link {
            color: #fff;
            padding: 0.5rem 1rem;
            border-radius: 0.25rem;
            margin-bottom: 0.5rem;
        }
        .sidebar .nav-link:hover, .sidebar .nav-link.active {
            background-color: #495057;
        }
        .sidebar .nav-link i {
            margin-right: 0.5rem;
        }
        .content {
            padding: 2rem;
        }
        .table-container {
            background-color: #fff;
            border-radius: 0.5rem;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            padding: 2rem;
        }
        #sidebarToggle {
            display: none;
        }
        @media (max-width: 767.98px) {
            #sidebarToggle {
                display: block;
                position: fixed;
                top: 1rem;
                left: 1rem;
                z-index: 1050;
                background-color: transparent;
                border: 2px solid rgba(33, 37, 41, 0.7);
                color: #343a40;
            }
            .sidebar {
                position: fixed;
                top: 0;
                left: -100%;
                width: 250px;
                transition: 0.3s;
                z-index: 1040;
            }
            .sidebar.show {
                left: 0;
            }
            main {
                margin-left: 0 !important;
            }
        }
    </style>
</head>
<body>
    <button class="btn" id="sidebarToggle">
        <i class="bi bi-list"></i>
    </button>

    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-3 col-lg-2 d-md-block sidebar collapse">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item mb-4 text-center">
                            <a class="navbar-brand" href="#">
                                <img src="/images/logodigistall.png" alt="DigiStall" style="max-width: 80%; height: auto;">
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/adminDashboard"><i class="bi bi-speedometer2"></i> Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/adminAddProd"><i class="bi bi-plus-circle"></i> Add Product</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/adminManageProd"><i class="bi bi-grid"></i> Manage Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/adminUser"><i class="bi bi-people"></i> Manage Users</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/adminManageMessage"><i class="bi bi-chat-dots"></i> Messages</a>
                        </li>
                        <li class="nav-item mt-5">
                            <a class="nav-link text-danger" href="/index"><i class="bi bi-box-arrow-right"></i> Log Out</a>
                        </li>
                    </ul>
                </div>
            </nav>

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="content">
                    <h1 class="mb-4">Manage Users</h1>
                    <div class="table-container">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                       <th>ID</th>
                                       <th>Full Name</th>
                                       <th>Email</th>
                                       
                                       <th>Created At</th>
                                       <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!--<% userinfo.forEach(digimodel => { %>-->
                                        <tr>
                                          <td><%= digimodel.id %></td>
                                          <td><%= digimodel.full_name %></td>
                                          <td><%= digimodel.email %></td>
                                       
                                          <td><%= digimodel.created_at %></td>
                                          <td>
                                                <a href="/useredit/<%= digimodel.id %>" class="btn btn-sm btn-primary">Update</a>
                                                <a href="/userdelete/<%= digimodel.id %>" class="btn btn-sm btn-danger">Delete</a> 
                                          </td>
                                        </tr>
                                    <!--<% }) %>-->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('sidebarToggle').addEventListener('click', function() {
            document.querySelector('.sidebar').classList.toggle('show');
        });
    </script>
</body>
</html>
